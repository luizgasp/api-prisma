{
  "openapi": "3.0.0",
  "info": {
    "title": "Vizion API Documentation",
    "description": "This is an upload API, used to create your own user, authenticate and upload your images in an AWS Bucket.<br> With this API you can implement an application that will measure objects, no longer needing to do mathematical calculations by hand.",
    "version": "1.0.0",
    "contact": {
      "email": "luizegasp@gmail.com"
    }
  },
  "paths": {
    "/user": {
      "post": {
        "tags": ["User"],
        "summary": "Create an user",
        "description": "Create a new user, just one user per e-mail",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "user@email.com",
                  "password": "userpassword"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "User already exists"
          }
        }
      },
      "delete": {
        "tags": ["User"],
        "summary": "Delete an user",
        "description": "Delete an existent user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted successfully"
          },
          "400": {
            "description": "User doesn't exists"
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Authenticate an user",
        "description": "Authenticate an existing user, your email and password must match",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "user@email.com",
                  "password": "userpassword"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User authenticated"
          },
          "400": {
            "description": "Email/password doesn't match"
          }
        }
      }
    },
    "/objects": {
      "post": {
        "tags": [ "Objects" ],
        "summary": "Create an object",
        "description": "Create a new object, you must be authenticated to create an object",
        "security": [ { "bearerAuth": [] } ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "width": {
                    "type": "number"
                  } ,
                  "height": {
                    "type": "number"
                  }
                },
                "example": {
                  "width": 200,
                  "height": 200
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Object created successfully"
          },
          "400": {
            "description": "User doesn't exist or isn't authenticated"
          }
        }
      },
      "get": {
        "tags": [ "Objects" ],
        "summary": "List all objects",
        "description": "List all existent objects",
        "responses": {
          "200": {
            "description": "All existent objects will be listed"
          }
        }
      }
    },
    "/objects/{id}": {
      "patch": {
        "tags": [ "Objects" ],
        "summary": "Update the object's image",
        "description": "Update the image of an existent object, you must be authenticated to update your object's image.<br>Remember that you need to pass the Object ID you created earlier.<br>You can only update the objects that you have created by yourself",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Object ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Image updated successfully"
          },
          "400": {
            "description": "Object doesn't exists"
          },
          "403": {
            "description": "This object was not created by you"
          }
        }
      },
      "delete": {
        "tags": [ "Objects" ],
        "summary": "Delete an object",
        "description": "Delete an existent object, you must be authenticated to update your object's image.<br>Remember that you need to pass the Object ID that you want to delete.<br>You can only delete objects that you have created by yourself",
        "security": [ { "bearerAuth": [] } ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Object ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Object deleted successfully"
          },
          "400": {
            "description": "Object doesn't exists"
          },
          "403": {
            "description": "This object was not created by you"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}